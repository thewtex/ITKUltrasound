FROM thewtex/jupyter-notebook-debian:latest
MAINTAINER Matt McCormick <matt.mccormick@kitware.com>

USER root
RUN apt-get update && \
  DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
  bash \
  build-essential \
  bzip2 \
  curl \
  git \
  libcurl4-openssl-dev \
  libncurses5-dev \
  libfftw3-dev \
  libgl1-mesa-dev \
  libssl-dev \
  make \
  ninja-build \
  python3 \
  python3-dev \
  python3-matplotlib \
  python3-numpy \
  python3-nose \
  python3-pip \
  python3-scipy \
  python3-setuptools \
  sed \
  tar \
  vim \
  wget \
  libexpat1-dev \
  libhdf5-dev \
  libjpeg-dev \
  libpng12-dev \
  libtiff5-dev \
  xserver-xorg-video-dummy \
  xserver-xorg-input-void \
  libxt-dev \
  zlib1g-dev

RUN pip3 install ipywidgets

# Build and install CMake from source.
WORKDIR /usr/src
RUN git clone git://cmake.org/cmake.git CMake && \
  cd CMake && \
  git checkout v3.5.1 && \
  mkdir ../CMake-build && \
  cd ../CMake-build && \
  /usr/src/CMake/bootstrap \
    --parallel=$(nproc) \
    --prefix=/usr && \
  make -j$(nproc) && \
  ./bin/cmake -DCMAKE_USE_SYSTEM_CURL:BOOL=ON \
    -DCMAKE_BUILD_TYPE:STRING=Release \
    -DCMAKE_USE_OPENSSL:BOOL=ON . && \
  make install && \
  cd .. && \
  rm -rf CMake CMake-build

# Build and install KWStyle from source.
RUN git clone https://github.com/Kitware/KWStyle.git && \
  mkdir KWStyle-build && \
  cd KWStyle-build && \
  cmake \
    -G Ninja \
    -DCMAKE_BUILD_TYPE:STRING=Release \
    -DCMAKE_INSTALL_PREFIX:PATH=/usr \
      ../KWStyle && \
  ninja install && \
  cd .. && \
  rm -rf KWStyle KWStyle-build

# Build and install VTK from source
RUN git clone https://gitlab.kitware.com/vtk/vtk.git VTK && \
  cd VTK && git checkout v7.0.0 && cd .. && \
  mkdir VTK-build && \
  cd VTK-build && \
  cmake \
    -G Ninja \
    -DCMAKE_BUILD_TYPE:STRING=Release \
    -DVTK_Group_Rendering:BOOL=OFF \
    -DVTK_WRAP_PYTHON:STRING=ON \
    -DCMAKE_INSTALL_PREFIX:PATH=/usr \
      ../VTK && \
  ninja && \
  ninja install && \
  cd .. && rm -rf VTK VTK-build

# Build and install ITK from source.
# 2016-07-10 master
RUN git clone https://itk.org/ITK.git && \
  cd /usr/src/ITK && \
  git checkout 40b6c5155932e60de891bbd68a35fe654cf5137d && \
  mkdir /usr/src/ITK-build && \
  cd /usr/src/ITK-build && \
  cmake -G Ninja \
    -DCMAKE_BUILD_TYPE:STRING=MinSizeRel \
    -DCMAKE_INSTALL_PREFIX:PATH=/usr \
    -DBUILD_TESTING:BOOL=OFF \
    -DBUILD_EXAMPLES:BOOL=OFF \
    -DBUILD_SHARED_LIBS:BOOL=ON \
    -DITK_BUILD_DEFAULT_MODULES:BOOL=OFF \
    -DITKGroup_Filtering:BOOL=ON \
    -DITKGroup_Numerics:BOOL=ON \
    -DITKGroup_IO:BOOL=ON \
    -DModule_ITKHDF5:BOOL=ON \
    -DITK_WRAP_PYTHON:BOOL=ON \
    -DPYTHON_EXECUTABLE:FILEPATH=/usr/bin/python3 \
    -DITK_USE_FFTWD:BOOL=ON \
    -DITK_USE_FFTWF:BOOL=ON \
    -DITK_USE_SYSTEM_FFTW:BOOL=ON \
    -DITK_USE_SYSTEM_SWIG:BOOL=OFF \
    -DITK_USE_SYSTEM_GDCM:BOOL=OFF \
    -DITK_USE_SYSTEM_LIBRARIES:BOOL=ON \
      /usr/src/ITK && \
  ninja && \
  cp /usr/src/ITK-build/Wrapping/Generators/Python/WrapITK.pth /usr/lib/python3/dist-packages/ && \
  find ./Wrapping -name '*.cpp' -delete -o -name '*.xml' -delete && \
  find . -name '*.o' -delete

RUN mkdir /usr/src/ITKUltrasound-build

USER jovyan
WORKDIR /home/jovyan
